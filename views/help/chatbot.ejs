<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gemini AI - Farmer Chat</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #e4f2dc;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-image: url('https://www.transparenttextures.com/patterns/wood-pattern.png');
        }
        
        .chat-container {
            width: 50%;
            max-width: 600px;
            background: #fff7e6;
            border-radius: 10px;
            box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
            padding: 20px;
            height: 80vh;
            overflow: hidden;
            border: 3px solid #8b5a2b;
        }
        .chat-box {
            flex-grow: 1;
            overflow-y: auto;
            padding: 10px;
            border-bottom: 2px solid #8b5a2b;
            display: flex;
            flex-direction: column;
        }
        .user-message, .ai-message {
            padding: 12px;
            border-radius: 15px;
            margin-bottom: 10px;
            max-width: 80%;
            word-wrap: break-word;
            font-size: 16px;
            line-height: 1.5;
        }
        .user-message {
            background: #228B22;
            color: white;
            align-self: flex-end;
            text-align: right;
        }
        .ai-message {
            background: #f4e1c4;
            color: black;
            align-self: flex-start;
            text-align: left;
            font-size: larger;
        }
        .input-container {
            display: flex;
            align-items: center;
            padding: 10px;
            background: #fff7e6;
        }
        .alert {
            flex-grow: 1;
            border: 2px solid #8b5a2b;
            border-radius: 20px;
            padding: 12px;
            outline: none;
            font-size: 16px;
            background: #fdf5e6;
            font-family: 'Poppins', sans-serif;
        }
        .btn-submit {
            border-radius: 50% !important;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            margin-left: 10px;
            background: #228B22;
            border: none;
            color: white;
        }
        .btn-submit:hover {
            background: #1d6b1d;
        }
        .navbar-brand{
            padding: 20px 20px 20px 20px!important;
            font-size: 30px !important;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <a class="navbar-brand text-success fw-bold d-flex align-items-center" href="/vegetables">
        <i class="fa-solid fa-seedling"></i> FarmConnect AI ChatBoat
    </a>
    <div class="chat-container">
        <div class="chat-box" id="output"></div>
        <div class="input-container">
            <input type="text" class="alert" id="userInput" placeholder="Ask about farming..."> 
            <button id="sendBtn" class="btn btn-success btn-submit"><i class="fas fa-arrow-up"></i></button>
        </div>
    </div>

    <script type="module">
        import { GoogleGenerativeAI } from "https://cdn.jsdelivr.net/npm/@google/generative-ai/+esm";

        let chatbot_api = "<%= process.env.chatbot %>";
        // const apiKey = process.env.chatbot; 
        // console.log(chatbot_api);
        const genAI = new GoogleGenerativeAI(chatbot_api);

        document.getElementById("sendBtn").addEventListener("click", generateResponse);
        document.getElementById("userInput").addEventListener("keypress", function(event) {
            if (event.key === "Enter") {
                generateResponse();
            }
        });

        async function generateResponse() {
            const inputValue = document.getElementById("userInput").value;
            if (!inputValue) return;
            
            appendMessage("user", inputValue);
            document.getElementById("userInput").value = "";

            try {
                const model = genAI.getGenerativeModel({ model: "gemini-pro" });
                const result = await model.generateContent(inputValue);
                const text = await result.response.text();
                appendMessage("ai", text);
            } catch (error) {
                console.error("Error:", error);
                appendMessage("ai", "Failed to load response.");
            }
        }

        function appendMessage(sender, message) {
            const chatBox = document.getElementById("output");
            const messageDiv = document.createElement("div");
            messageDiv.className = sender === "user" ? "user-message" : "ai-message";
            messageDiv.innerHTML = formatTextResponse(message);
            chatBox.appendChild(messageDiv);
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        function formatTextResponse(responseText) {
            return responseText
                .replace(/\*\*(.*?)\*\*/g, "<h2>$1</h2>") 
                .replace(/\*(.*?)\*/g, "<strong>$1</strong>") 
                .replace(/- (.*?)\n/g, "<li>$1</li>") 
                .replace(/\n\n/g, "<br><br>") 
                .replace(/<li>(.*?)<\/li>/g, "<ul><li>$1</li></ul>"); 
        }
    </script>
</body>
</html>